<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/LogoSize"
        android:layout_marginLeft="@dimen/LogoMarginleft"
        android:layout_marginTop="@dimen/LogoMarginTop"
        android:scaleType="fitStart"
        android:src="@drawable/logo" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/customMarginLeft"
        android:layout_marginRight="@dimen/customMarginRight"
        android:text="@string/title_location"
        android:textColor="#000000"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/customMarginLeft"
                android:layout_marginTop="@dimen/LogoMarginTop"
                android:layout_marginRight="@dimen/customMarginRight"
                android:text="@string/location"
                android:textColor="#000000"
                app:autoSizeTextType="uniform" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/CustomMarginTop"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/pin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/BetweenLayoutSquares"
                    android:text="@string/select_map"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#9500FF" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/LogoMarginTop"
                android:gravity="center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textInputHeight"
                    android:layout_marginRight="@dimen/textInputHeight"
                    android:background="#F4F4F4"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/BetweenLayoutSquares"
                    android:text="@string/your_location"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000000" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/LogoMarginTop"
                android:gravity="center">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#F4F4F4"
                    android:padding="@dimen/BetweenLayoutSquares"
                    android:text="@string/zip_code"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000000" />

            </LinearLayout>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/customMarginLeft"
                android:layout_marginTop="@dimen/LogoMarginTop"
                android:text="@string/accept_term_conditions"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingTop="@dimen/LogoMarginTop">

            <Button
                android:id="@+id/btnLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#F8EBFA"
                android:text="   Continue  "
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#9500FF" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/LogoMarginTop"
                android:text="Terms and Conditions"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#9500FF" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>